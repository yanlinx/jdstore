<style>
body {
    background-color: #C8E6C9;
}
.panel-default {
opacity: 0.85;
}
</style>
<br>
<div class="container">
    	<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-login panel-default">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-12" style="text-align:center">
								<h2 style="font-family:'Lobster';font-size:275%;color:#00695C;">Hi,welcome </a></h2>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                    <%= f.input :email, required: true, autofocus: true, type:"email", name:"email", id:"email", tabindex:"1",
                                class:"form-control", placeholder:"Email Address", value:"" %>
                    <%= f.input :password, required: true, placeholder:"Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    <%= f.input :password_confirmation, required: true, placeholder:"Confirm Password" %>
                  </div>
								<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                          <div class="form-actions">
                            <%= f.button :submit, "Sign up" , class:"form-control btn btn-register"%>
                          </div>
											</div>
										</div>
									</div>
                  <div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
                          <%= render "devise/shared/links" %>
												</div>
											</div>
										</div>
									</div>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

