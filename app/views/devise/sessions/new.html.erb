
<style>
body {
    background-color:#C8E6C9;
}
.panel-default {
opacity: 0.85;
}
</style>
<br>
<div class="container">
    	<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-login panel-default">
					<div class="panel-heading">
						<div class="row">
							<div style="text-align:center" class="col-xs-12">
								<h2 style="font-family:'Lobster';font-size:275%;color:#00695C;">Welcome back</a></h2>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email, required: false, autofocus: true ,type:"text", name:"username", id:"username", tabindex:"1", class:"form-control", placeholder:"Email", value:""%>
                    <%= f.input :password, required: false ,type:"password", name:"password", id:"password", tabindex:"2",\
                                 class:"form-control", placeholder:"Password"%>
                  </div>
									<div class="form-group text-center">
                    <%= f.input :remember_me, type:"checkbox", tabindex:"3", class:"", name:"remember",id:"remember",\
                                 as: :boolean if devise_mapping.rememberable? %>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                         <div class="form-actions">
                           <%= f.button :submit, type:"submit", name:"login-submit", id:"login-submit", tabindex:"4",\
                                         class:"form-control btn btn-login", value:"Log In" %>
                         </div>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
                          <%= render "devise/shared/links" %>
												</div>
											</div>
										</div>
									</div>
                <% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
